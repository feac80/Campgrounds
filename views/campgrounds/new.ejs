<% include ../partials/header %>

<div class="container">
    <h2 style="text-align:center">Add a new campground!</h2>
    <div class="row">
    <div style="width:30% ; margin: 25px auto" >
        <form action="/campgrounds" method="POST" >
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="Type the name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="Type the url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[descriptions]" placeholder="Type the description">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add">
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    </div>
</div>

