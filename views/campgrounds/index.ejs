<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
           <div class="container">
                <h2> Welcome to the Camps website!</h2>
                <p>View all the Camps in the czech Republic</p>
                <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new CampGround</a></p>
            </div>
    </header>
    
    <div class="row" >
        <div class="col-lg-12"><h2> Our most popular camps site</h2></div>
    </div>    
   
    <div class="row text-center"> 
        <% camps.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                    <div class="img-thumbnail">
                        <img class="img-responsive"  src="<%= camp.image %>">   
                        <div class="caption">
                          <h4><%= camp.name %> </h4> 
                        </div>
                        <p><a href="/campgrounds/<%=camp.id %>" class="btn btn-primary">More Info</a> </p>
                    </div>
                
            </div>
        <% });%>
    </div>

</div>

<% include ../partials/footer %>