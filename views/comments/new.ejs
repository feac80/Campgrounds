<% include ../partials/header %>

<div class="container">
    <h2 style="text-align:center">Add a new comment to <%= campground.name %></h2>
    <div class="row">
    <div style="width:30% ; margin: 25px auto" >
        <form action="/campgrounds/<%= campground.id %>/comments" method="POST" >
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
    
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add">
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    </div>
</div>

<% include ../partials/footer %>